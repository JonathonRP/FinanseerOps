// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/typescript-node
{
	"name": "Finanzen",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"image": "mcr.microsoft.com/devcontainers/base:ubuntu-22.04",
	"features": {
		"ghcr.io/meaningful-ooo/devcontainer-features/fish:1": {
			"fisher": false
		},
		"ghcr.io/devcontainers/features/node:1": {
			"nodeGypDependencies": false,
			"version": "18.18.0"
		}
	},

	// Features to add to the dev container. More info: https://containers.dev/features.
	// "features": {},

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],

	// Use 'postCreateCommand' to run commands after the container is created.
	"postCreateCommand": "npm list -g | grep pnpm && pnpm install || npm install -g pnpm --no-shrinkwrap && pnpm install",

	// Configure tool-specific properties.
	"customizations": {
		"vscode": {
			"settings": {
				"editor.fontLigatures": "'calt', 'ss01'",
				"editor.formatOnType": false,
				"editor.formatOnPaste": true,
				"editor.formatOnSave": true,
				"editor.codeActionsOnSave": {
					"source.fixAll.eslint": true
					// "source.organizeImports": true
				},
				"editor.formatOnSaveMode": "file",
				"files.autoSave": "onFocusChange",
				"svelte.enable-ts-plugin": true,
				"svelte.plugin.svelte.defaultScriptLanguage": "ts",

				"explorer.sortOrder": "filesFirst",
				"workbench.editor.labelFormat": "short",

				"tailwindCSS.emmetCompletions": true,
				"html.format.enable": false,
				"json.format.enable": false,

				"[svelte]": {
					"editor.defaultFormatter": "svelte.svelte-vscode"
				},
				"[javascript][typescript]": {
					"editor.defaultFormatter": "esbenp.prettier-vscode",
					"prettier.configPath": "./.prettierrc.cjs",
					"prettier.prettierPath": "./node_modules/prettier"
				},

				"eslint.validate": ["javascript", "typescript", "svelte"],
				"eslint.rules.customizations": [{ "rule": "*", "severity": "warn" }],

				"dotfiles.repository": "https://github.com/JonathonRP/.dotfiles",
				"dotfiles.targetPath": "~/dotfiles",
				"editor.fontFamily": "'cascadia code', Consolas, 'Courier New', monospace",
				"terminal.integrated.fontFamily": "'MesloLGM Nerd Font'",
				"terminal.integrated.defaultProfile.linux": "fish",
				"terminal.integrated.profiles.linux": {
					"bash": {
						"path": "bash",
						"icon": "terminal-bash"
					},
					"zsh": {
						"path": "zsh"
					},
					"fish": {
						"path": "fish",
						"icon": "terminal-linux"
					},
					"tmux": {
						"path": "tmux",
						"icon": "terminal-tmux"
					},
					"pwsh": {
						"path": "pwsh",
						"icon": "terminal-powershell"
					}
				}
			},

			// Add the IDs of extensions you want installed when the container is created.
			"extensions": [
				"svelte.svelte-vscode",
				"bourhaouta.tailwindshades",
				"bradlc.vscode-tailwindcss",
				"Prisma.prisma",
				"esbenp.prettier-vscode",
				"dbaeumer.vscode-eslint",
				"eamodio.gitlens",
				"csstools.postcss",
				"alfredbirk.tailwind-documentation",
				"KalimahApps.tailwind-config-viewer"
			]
		}
	},

	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	"remoteUser": "root",
	"forwardPorts": [5000]
	// "appPort": [5000]
}
