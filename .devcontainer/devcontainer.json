// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/typescript-node
{
  "name": "Personal Buxfer Finance Dashboard",
  // Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
  "image": "mcr.microsoft.com/devcontainers/typescript-node:0-18",
  "features": {
    "ghcr.io/devcontainers-contrib/features/typescript:1": {}
  },

  // Features to add to the dev container. More info: https://containers.dev/features.
  // "features": {},

  // Use 'forwardPorts' to make a list of ports inside the container available locally.
  // "forwardPorts": [],

  // Use 'postCreateCommand' to run commands after the container is created.
  "postCreateCommand": "npm list -g | grep pnpm && pnpm install || npm install -g pnpm --no-shrinkwrap && pnpm install",

  // Configure tool-specific properties.
  "customizations": {
    "vscode": {
      "settings": {
        "svelte.enable-ts-plugin": true,
        "svelte.plugin.svelte.defaultScriptLanguage": "ts",

        "explorer.sortOrder": "filesFirst",
        "workbench.editor.labelFormat": "short",

        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.codeActionsOnSave": {
          "source.fixAll": true,
          "source.organizeImports": true
        },

        "tailwindCSS.emmetCompletions": true,
        "html.format.enable": false,
        "json.format.enable": false,

        "[svelte]": {
          "editor.defaultFormatter": "svelte.svelte-vscode"
        },
        "[prisma]": {
          "editor.defaultFormatter": "Prisma.prisma"
        },

        "eslint.validate": ["javascript", "typescript", "svelte"],

        "dotfiles.repository": "JonathonRP/.dotfiles"
      },

      // Add the IDs of extensions you want installed when the container is created.
      "extensions": [
        "svelte.svelte-vscode",
        "bourhaouta.tailwindshades",
        "bradlc.vscode-tailwindcss",
        "Prisma.prisma",
        "esbenp.prettier-vscode",
        "dbaeumer.vscode-eslint",
        "eamodio.gitlens",
        "csstools.postcss"
      ]
    }
  },

  // Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
  "remoteUser": "root",
  // "forwardPorts": 5000,
  "appPort": [5000, 9181]
}
